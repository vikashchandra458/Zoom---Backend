  <script>
    document.getElementById("confirm").addEventListener("click", () => {
      if (document.getElementById("yourName").value.length < 3) {
        if (document.getElementById("yourName").value.length === 0) {
          document.getElementById("errorName").innerHTML = "Name Required";
        } else {
          document.getElementById("errorName").innerHTML =
            "Atleast 3 characters are required";
        }
      } else {
        document.getElementById("errorName").innerHTML = "";
      }
    });
    document.getElementById("close").addEventListener("click", () => {
      document.getElementById("error").innerHTML = "";
      document.getElementById("errorName").innerHTML = "";
      document.getElementById("roomID").value = "";
      document.getElementById("yourName").value = "";
    });

    document.getElementById("createRoom").addEventListener("click", () => {
      document.getElementById("see").style.visibility = "hidden";
      document.getElementById("title").innerHTML = "Create Room";
      document.getElementById("errorName").style.marginBottom = "-40px";
      document.getElementById("myBtn").click();
      document.getElementById("confirm").addEventListener("click", () => {
        if (document.getElementById("yourName").value.length > 2) {
          var f = document.createElement("form");
          f.action = `/${"<%=uuid%>"}`;
          f.method = "POST";
          f.target = "_self";

          var i = document.createElement("input");
          i.type = "hidden";
          i.name = "fragment";
          i.value = document.getElementById("yourName").value;
          f.appendChild(i);

          document.body.appendChild(f);
          f.submit();
        }
      });
    });

    document.getElementById("joinRoom").addEventListener("click", () => {
      document.getElementById("see").style.visibility = "visible";
      document.getElementById("title").innerHTML = "Join Room";
      document.getElementById("errorName").style.marginBottom = "20px";
      document.getElementById("myBtn").click();
      document.getElementById("confirm").addEventListener("click", () => {
        if (document.getElementById("roomID").value.length !== 0) {
          if (document.getElementById("roomID").value.length === 36) {
            document.getElementById("error").innerHTML = "";
            if (document.getElementById("yourName").value.length > 2) {
              var f = document.createElement("form");
              f.action = `/${document.getElementById("roomID").value}`;
              f.method = "POST";
              f.target = "_self";

              var i = document.createElement("input");
              i.type = "hidden";
              i.name = "fragment";
              i.value = document.getElementById("yourName").value;
              f.appendChild(i);

              document.body.appendChild(f);
              f.submit();
            }
          } else {
            document.getElementById("error").innerHTML = "Invalid Room ID";
          }
        } else {
          document.getElementById("error").innerHTML = "Room ID Required";
        }
      });
    });
